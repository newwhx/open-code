<%= form_for @article do |f| %>
	<p>
	<%=f.label :title %><br>
	<%=f.text_field :title %>
	</p>
	<p>
	<%=f.label :text %><br>
	<%=f.text_area :text, size: '17*960'%>
	</p>
	<p>
	<%=f.submit 'Create' %>
<% end %>

<%= form_tag('/search',method: 'get') do %>
<%= label_tag(:q, 'Search for:') %>
<%= text_field_tag(:q) %>
<%= submit_tag("Search") %>
<% end %>
